<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title><%= cleanse(@page_title ? "#{@page_title} &raquo; " : "") %><%= SETTINGS.name %>: <%= SETTINGS.tagline %></title>

    <!-- Stylesheets, static -->
    <%= theme_stylesheet_link_tag 'reset-fonts-grids', :media => :all %>
    <%= stylesheet_link_tag 'common', :media => :all %>
    <%= theme_stylesheet_link_tag 'base-min', 'custom', :media => :all, :cache => true %>
    <%#= theme_stylesheet_link_tag 'print', :media => :print %>

    <!-- Stylesheets, inserted  -->
    <%= yield :css_insert %>

    <!-- JavaScripts, static -->
    <%= javascript_include_tag 'jquery.min.js', 'jquery-ui', 'jquery-fx', 'jrails', :cache => true %>
    <%= theme_javascript_include_tag 'application'%>

    <!-- JavaScripts, inserted -->
    <%= yield :javascript_insert %>

    <!-- Auto-discovery, static -->
    <%= auto_discovery_link_tag(:atom, formatted_events_url('atom'), :title => 'Atom: All Events' )%>

    <!-- Auto-discovery, inserted -->
    <%= yield :discovery_insert %>

    <!-- Icons -->
    <link rel="apple-touch-icon" href="<%= theme_image_path('site-icon.png') %>" />
  </head>
  <body>

  <div id="doc3" class="yui-t7">
    <div class="topping">
      <div class="yui-g heading">
        <div class="yui-u first titling">
          <a href="/" id="project_title"><%= SETTINGS.name %></a>
        </div>
        <div class="yui-u searching">
          <% form_tag '/events/search', :method => :get do %>
            <div id='search_form'>
            <label for="search_field">Search events</label>
            <% if request.env["HTTP_USER_AGENT"] && request.env["HTTP_USER_AGENT"].include?("Safari") %>
              <input type="search" name="query" value="<%= @query %>" results="5" id="search_field">
            <% else %>
              <%= text_field_tag 'query', @query, :id => 'search_field' %>
            <% end %>
            </div>
          <% end -%>
        </div>
      </div>
      <div class="menuing">
        <div class="yui-g mainmenuing">
          <ul>
            <li><%= link_to "Events", events_path, :class => link_class[:events] %></li>
            <li><%= link_to "Venues", venues_path, :class => link_class[:venues] %></li>
          </ul>
        </div>
        <div class="yui-g submenuing">
          <!-- Sub-menu -->
          <%= render(:partial => 'events/subnav') if link_class[:events] == 'active' %>
          <%= render(:partial => 'venues/subnav') if link_class[:venues] == 'active' %>
          <%= render(:partial => 'sources/subnav') if link_class[:import] == 'active' %>
        </div>
      </div>
    </div>
    <div id="content" class="yui-g">
      <!-- Notifications -->
      <%# Uncomment line below to see how flash messages are rendered: %>
      <%# flash[:success] = "yay"; flash[:failure] = "meh" %>
      <%= render_flash %>

      <!-- Page content -->
      <%= yield %>
    </div>

    <div id="top_footer">
    </div>

  </div>

  <% if ENV['RAILS_ENV'] == 'production' %>
    <!-- Put your hit tracking code here -->
  <% end %>

  </body>
</html>
